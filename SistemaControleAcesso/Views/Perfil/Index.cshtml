@model IEnumerable<SistemaControleAcesso.Models.Perfil>

@{
    ViewBag.Title = "Perfis de usuário";
}
<table class="table table-bordered table-striped">

	<tr>
		<th style="width:250px;"><a class="btn btn-primary" href="@Url.Action(actionName:"Create")"><i class="glyphicon glyphicon-file"></i></a></th>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.supervisor)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
		<td>
			<a class="btn btn-primary" href="@Url.Action(actionName:"Edit", routeValues: new { id = item.id})"><i class="glyphicon glyphicon-pencil"></i></a>
			<a class="btn btn-success" href="@Url.Action(actionName:"Details",routeValues: new { id = item.id})"><i class="glyphicon glyphicon-eye-open"></i></a>
			<a class="btn btn-danger" href="@Url.Action(actionName:"Delete",routeValues: new { id = item.id})"><i class="glyphicon glyphicon-trash"></i></a>				
		</td>
	        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @SistemaControleAcesso.Models.Util.displayNameEnum(item.supervisor)
        </td>
    </tr>
}

</table>
