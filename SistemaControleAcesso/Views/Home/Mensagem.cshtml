@{
    ViewBag.Title = "Mensagens do sistema";
    Layout = "~/Views/Shared/_Layout_sem_menu.cshtml";
}
<section class="content">
    <div class="error-page">
        <h2 class="headline text-yellow"> 404</h2>
        <div class="error-content">
            <h3><i class="glyphicon glyphicon-alert text-yellow"></i>@ViewBag.title</h3>
            <p>
                @ViewBag.mensagem
            </p>
            <a href="@Url.Action(actionName: "Index", controllerName:"Home")" class="btn btn-warning"><i class="glyphicon glyphicon-remove-circle"></i> Fechar</a>
        </div><!-- /.error-content -->
    </div>
</section>