<div class="modal fade" tabindex="-1" role="dialog" id="lista_Usuario">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Usuários</h4>
            </div>
            <div class="modal-body">
                <div class="panel panel-default">
                    <div class="panel-heading">Pesquisar</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label for="lis_Usuario_nome" class="control-label">Nome</label>
                                <input type="text" name="lis_Usuario_nome" id="lis_Usuario_nome" class="form-control" />
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="lis_Usuario_cidade_nome" class="control-label">Cidade</label>
                                <input type="text" name="lis_Usuario_cidade_nome" id="lis_Usuario_cidade_nome" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4">
                                <label class="control-label">&nbsp;</label>
                                <button type="button" name="pesquisar" id="pesquisar" class="btn btn-default form-control" onclick="Lista_Usuario.pesquisar()">Pesquisar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="divTableUsuario">
                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-ok-circle"></i> Fechar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
    var Lista_Usuario = {
        abrir: function () {
            $('#lista_Usuario').modal("show");
        },

        selecionar(id) {
            this.fechar();
            $('#usuario_id').val(id);
            $('#usuario_id').focus();
        },
        fechar: function () {
            $('#lista_Usuario').modal("hide");
        },
        pesquisar: function () {
            var Usuario_nome = $('#lis_Usuario_nome').val()
            var Usuario_cidade_nome = $('#lis_Usuario_cidade_nome').val()
            $('#divTableUsuario').load("@Url.Action(actionName: "Index", controllerName: "Usuario")?nome=" + Usuario_nome + "&cidade_nome=" + Usuario_cidade_nome);

        }

    };
</script>
